{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "module": "es2015",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "paths": {
            "@base/*": [
                "src/base/*"
            ],
            "@env/*": [
                "src/environments/*"
            ],
            "@interfaces/*": [
                "src/interfaces/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@enums/*": [
                "src/enums/*"
            ],
            "@modules/*": [
                "src/modules/*"
            ],
            "@entities/*": [
                "src/entities/*"
            ]
        }
    }
}
